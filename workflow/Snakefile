import os
import glob
import pandas as pd
from snakemake.utils import Paramspace


##### store paths and user-specific variables #####
configfile: "config/config.yaml"


#### load snoRNA and RBP list ####
sno_list = pd.read_table(config["path"]["snoRNA_list"]).gene_id.values.tolist()
rbp_list = pd.read_table(config["path"]["RBP_list"]).gene_name.values.tolist()


#############################
## Load rules
#############################

include: "rules/filter.smk"
include: "rules/cleanup.smk"
include: "rules/interactions.smk"
include: "rules/cytoscape.smk"


#############################
## Target rules
#############################

rule all:
    input:
        # Generate snoRNA and RBP interactions
        RBP_interactions = expand("results/interactions/ENCODE_{thres}/{rbp}.bed", thres=config["thresholds"]["ENCODE"], rbp=rbp_list),
        sno_interactions = expand("results/interactions/snoGloBe_HTRRI_{thres}/{sno}.bed", thres=config["thresholds"]["snoGloBe_HTRRI"], sno=sno_list),
        STRING = "results/interactions/STRING/physical_RBP_RBP.tsv",
        status = "results/preprocessing_status.txt",
        sno_RBP_target_overalp = "results/interactions/sno_RBP_target_overlap/weighted_sig_sno_RBP_target_overlap.tsv",
        #sig_sno_RBP_target_overlap_targets = "results/overlapping_targets/ENSG00000277194/summary.txt",
        RBP_binds_to_sno = "results/interactions/RBP_binds_to_sno/all_RBP_binding_to_sno.tsv",
        network = "results/networks/sno_RBP_network.cys"
